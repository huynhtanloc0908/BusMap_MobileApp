<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_coffee_shop"
    tools:context=".MainActivity">

    <!-- Semi-transparent overlay for better text readability -->

    <!-- Welcome Title -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/coffee_overlay_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Coffee Shop"
        android:textColor="@color/coffee_text_light"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginTop="80dp"
        android:shadowColor="@color/coffee_dark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Coffee Shop Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Perfect Coffee Experience"
        android:textColor="@color/coffee_cream"
        android:textSize="16sp"
        android:textStyle="italic"
        android:fontFamily="serif"
        android:layout_marginTop="8dp"
        android:shadowColor="@color/coffee_dark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle" />

    <!-- Coffee Cup Icon with Background -->
    <FrameLayout
        android:id="@+id/flCoffeeIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <!-- Background Circle -->
        <View
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_coffee_icon_circle"
            android:alpha="0.3" />

        <!-- Coffee Cup Icon -->
        <TextView
            android:id="@+id/tvCoffeeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="â˜•"
            android:textSize="100sp"
            android:alpha="0.9"
            android:shadowColor="@color/coffee_dark"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6" />
    </FrameLayout>

    <!-- Create Account Button -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_coffee_gradient_primary"
        android:elevation="12dp"
        android:letterSpacing="0.1"
        android:stateListAnimator="@null"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/coffee_text_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="@color/coffee_dark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flCoffeeIcon"
        app:backgroundTint = "@null"
        android:backgroundTint = "@null"/>

    <!-- Sign In Button -->
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_coffee_gradient_secondary"
        android:elevation="12dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.1"
        android:stateListAnimator="@null"
        android:text="SIGN IN"
        android:textColor="@color/coffee_text_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@color/coffee_dark"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAccount"
        app:backgroundTint = "@null"
        android:backgroundTint = "@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>
